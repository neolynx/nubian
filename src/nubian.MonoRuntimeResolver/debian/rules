#!/usr/bin/make -f
# -*- makefile -*-

TARGET := opt/nubian/gacd
PACKAGE := nubian-monoruntimeresolver
BINARY := bin/Release/nubian.MonoRuntimeResolver.dll

%:
	dh $@

override_dh_auto_clean:
	xbuild /t:clean
	rm -rf packages/
	../../nubian nuget-nolocal

override_dh_auto_build:
	../../nubian nuget-localonly
	nuget restore -PackagesDirectory packages/
	xbuild /p:Configuration=Release
	../../nubian nuget-nolocal

override_dh_auto_install:
	dh_auto_install
	mkdir -p debian/$(PACKAGE)/$(TARGET)
	cp $(BINARY) debian/$(PACKAGE)/$(TARGET)/`basename $(BINARY) | tr A-Z a-z | sed s/.exe$$// | tr '.' '-'`

