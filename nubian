#!/bin/bash

set -e

usage()
{
  echo "Usage: $0 deb NUGET_ID VERSION [PACKAGE_SOURCE]" >&2
  echo "       $0 git NUGET_ID VERSION [PACKAGE_SOURCE]" >&2
  echo "       $0 bulkconvert FOLDER_PATH"
  echo
  echo "Examples:"
  echo "  $0 deb Newtonsoft.Json 10.0.3"
  echo "  $0 deb Newtonsoft.Json 10.0.3 /.nuget/packages"
  echo "  $0 bulkconvert /.nuget/packages"
  exit 1
}

action=$1
if [ -z "$action" ]; then
  usage
fi
shift

get_frameworkName()
{
  if [[ $1 = "net40" || $1 = "Net40" ]]; then
    fwk_name=".NETFramework4.0"
  elif [[ $1 = "net45" || $1 = "Net45" ]]; then
    fwk_name=".NETFramework4.5"
  elif [[ $1 = "net451" ]]; then
    fwk_name=".NETFramework4.5.1"
  elif [[ $1 = "net452" ]]; then
    fwk_name=".NETFramework4.5.2"
  elif [[ $1 = "net46" ]]; then
    fwk_name=".NETFramework4.6"
  elif [[ $1 = "net461" ]]; then
    fwk_name=".NETFramework4.6.1"
  elif [[ $1 = "net462" ]]; then
    fwk_name=".NETFramework4.6.2"
  elif [[ $1 = "net47" ]]; then
    fwk_name=".NETFramework4.7"
  elif [[ $1 = "netstandard1.0" ]]; then
    fwk_name=".NETStandard1.0"
  elif [[ $1 = "netstandard1.1" ]]; then
    fwk_name=".NETStandard1.1"
  elif [[ $1 = "netstandard1.2" ]]; then
    fwk_name=".NETStandard1.2"
  elif [[ $1 = "netstandard1.3" ]]; then
    fwk_name=".NETStandard1.3"
  elif [[ $1 = "netstandard1.4" ]]; then
    fwk_name=".NETStandard1.4"
  else
    get_fallbackMatch $2
  fi
}

get_fallbackMatch()
{
    echo "Getting fallback framework name"

    eval `xmlstarlet sel -T -t -o 'fwk_name="' \
    --if "//_:dependencies/_:group[contains(@targetFramework, '.NETFramework4')]" \
    -m "(//_:dependencies/_:group[contains(@targetFramework, '.NETStandard')])[last()]" \
    -m "@targetFramework" \
    -v . \
    -b \
    -b \
    --elif "//_:dependencies/_:group[contains(@targetFramework, '.NETStandard')]" \
    -m "(//_:dependencies/_:group[contains(@targetFramework, '.NETFramework4')])[last()]" \
    -m "@targetFramework" \
    -v . \
    -b \
    -b \
    -b \
    -o '"' \
    "$1.nuspec"`
}

nubian_bulkconvert()
{
  ver3_regex="(.*)/(.+)\.([0-9]+\.[0-9]+\.[0-9]+)\.nupkg"
  ver4_regex="(.*)/(.+)\.([0-9]+\.[0-9]+\.[0-9]+\.[0-9]+)\.nupkg"

  folder="$1"
  echo "Bulk converting $folder"

  for nupkg in $(find $folder -type f -name '*.nupkg')
  do
    if [[ $nupkg =~ $ver4_regex || $nupkg =~ $ver3_regex ]]
    then
      pkg="${BASH_REMATCH[2]}"
      pkgver="${BASH_REMATCH[3]}"
      echo "$pkg"
      echo "$pkgver"

      echo "Converting $pkg $pkgver"
      setup_nuget $pkg $pkgver $folder &
      sleep 5
    else
      echo "Considered $nupkg, but was not a match"
    fi
  done
}

setup_nuget()
{
  pkg=`echo $1 | sed 's/\b\(.\)/\u\1/g'`
  pkgver="$2"
  pkgname="$pkg.$pkgver.nupkg"
  pkgsource="$3"

  if [ -z "$pkg" ]; then
    echo Error: Please specify a NUGET_ID
    usage
  fi

  if [ -z "$pkgver" ]; then
    echo Error: Please specify a package version
    usage
  fi

  if [ -z "$pkgsource" ]; then
    pkgsource="https://api.nuget.org/v3/index.json"
  fi

  echo Creating debian package of $pkg $pkgver

  echo "* downloading and extracting ..."
  mkdir pkg
  nubian-nuget install $pkg -Version $pkgver -OutputDirectory pkg/
  if [ $? -ne 0 ]; then
    echo "\nError downloading $pkgurl" >&2
    exit 1
  fi

  cd pkg

  unzip "$pkg.$pkgver/$pkgname" "$pkg.nuspec"
  if [ $? -ne 0 ]; then
    echo "\nError unzipping `pwd`/$pkgname" >&2
    exit 1
  fi

  eval `xmlstarlet sel -t \
    -o 'nuget_version="'     -v "/_:package/_:metadata/_:version"     -o '" ' \
    -o 'nuget_url="'         -v "/_:package/_:metadata/_:projectUrl"  -o '" ' \
    -o 'nuget_description="' -v "/_:package/_:metadata/_:description" -o '" ' \
    -o 'nuget_summary="'      -v "/_:package/_:metadata/_:summary"     -o '" ' \
    <$pkg.nuspec`

  echo "* Nuget version:     $nuget_version"
  echo "* Nuget summary:     $nuget_summary"
  echo "* Nuget description: $nuget_description"
  echo "* Nuget url:         $nuget_url"

  echo "* Copying files ..."
  mkdir deb
  cd deb
  mkdir -p opt/mono/lib
  LIBPATHS="net462 net461 net46 net452 net451 net45 Net45 net40 Net40 netstandard2.0 netstandard1.4 netstandard1.3 netstandard1.2 netstandard1.1 netstandard1.0"
  mono_version="4.2.1"
   for libpath in $LIBPATHS
   do
    path="../$pkg.$pkgver/lib/$libpath"
    echo "Looking for assemblies in `pwd`/$path"
    if [ -d "$path" ]; then
      echo "Using assemblies found in $path"
      get_frameworkName $libpath $pkg
      cp -r $path/* opt/mono/lib
      rm -f opt/mono/lib/_._
      if [[  $libpath = "netstandard1.4" || $libpath = "netstandard1.3" || $libpath = "netstandard1.2" || $libpath = "net462" || $libpath = "net47" || $libpath = "net461" || $libpath = "net46" ]]; then
        mono_version="4.6.0"
      elif [[  $libpath = "netstandard2.0" ]]; then
        mono_version="4.8.0"
      fi
      break
    fi
  done

  mkdir -p usr/share/nupkg/

  cp "../$pkg.$pkgver/$pkgname" usr/share/nupkg/

  cd ..

  echo "FWK: |$fwk_name|"
  if [[ ! $fwk_name ]]; then
   get_fallbackMatch $pkg
  fi

  echo "Finding dependencies for $fwk_name"

  eval `xmlstarlet sel -T -t -o 'nupkgdeps="' \
  --if //_:dependencies/_:group[@targetFramework="'$fwk_name'"] \
  -m //_:dependencies/_:group[@targetFramework="'$fwk_name'"]/_:dependency \
  -v "concat(', nupkg-', translate(@id, '.', '-'), ' (>= ', @version, ')')" \
  -b \
  --elif "//_:dependencies/_:group[not(@targetFramework)]" \
  -m "//_:dependencies/_:group[not(@targetFramework)]/_:dependency" \
  -v "concat(', nupkg-', translate(@id, '.', '-'), ' (>= ', @version, ')')" \
  -b \
  --else \
  -m //_:dependencies/_:dependency \
  -v "concat(', nupkg-', translate(@id, '.', '-'), ' (>= ', @version, ')')" \
  -b \
  -b \
  -o '"' \
  $pkg.nuspec`
  eval `xmlstarlet sel -T -t -o 'libmonodeps="' \
  --if //_:dependencies/_:group[@targetFramework="'$fwk_name'"] \
  -m //_:dependencies/_:group[@targetFramework="'$fwk_name'"]/_:dependency \
  -v "concat(', libmono-', translate(@id, '.', '-'), ' (>= ', @version, ')')" \
  -b \
  --elif "//_:dependencies/_:group[not(@targetFramework)]" \
  -m "//_:dependencies/_:group[not(@targetFramework)]/_:dependency" \
  -v "concat(', libmono-', translate(@id, '.', '-'), ' (>= ', @version, ')')" \
  -b \
  --else \
  -m //_:dependencies/_:dependency \
  -v "concat(', libmono-', translate(@id, '.', '-'), ' (>= ', @version, ')')" \
  -b \
  -b \
  -o '"' \
  $pkg.nuspec`

  nupkgdeps=`echo $nupkgdeps | tr A-Z a-z`
  nupkgdeps=`echo $nupkgdeps | sed 's/>= \[\([\.0-9]\+\)\]/= \1/g'`
  nupkgdeps=`echo $nupkgdeps | sed 's/>= [(]\([\.0-9]\+\),[)]/>> \1/g'`
  nupkgdeps=`echo $nupkgdeps | sed 's/>= [(],\([\.0-9]\+\)[)]/<< \1/g'`
  nupkgdeps=`echo $nupkgdeps | sed 's/>= [(],\([\.0-9]\+\)\]/<= \1/g'`
  nupkgdeps="\${misc:Depends}$nupkgdeps"
  libmonodeps=`echo $libmonodeps | tr A-Z a-z`
  libmonodeps=`echo $libmonodeps | sed 's/>= \[\([\.0-9]\+\)\]/= \1/g'`
  libmonodeps=`echo $libmonodeps | sed 's/>= [(]\([\.0-9]\+\),[)]/>> \1/g'`
  libmonodeps=`echo $libmonodeps | sed 's/>= [(],\([\.0-9]\+\)[)]/<< \1/g'`
  libmonodeps=`echo $libmonodeps | sed 's/>= [(],\([\.0-9]\+\)\]/<= \1/g'`
  libmonodeps="\${misc:Depends}, mono-runtime (>=$mono_version)$libmonodeps"

  echo "Nupkg Dependencies: $nupkgdeps"
  echo "libmono Dependencies: $libmonodeps"

  cd deb

  #echo "* Creating git repo ..."
  #git init . >/dev/null
  #git add .
  #git commit -m "import $pkgname" >/dev/null

  pkgname=`echo $pkg | tr A-Z a-z | tr \. -`
  debname=nupkg-$pkgname
  nuget_description=`echo $nuget_description\n$nuget_summary | fmt --width=80 | sed 's/^/ /'`
  echo "* Creating debian files ..."
  mkdir -p debian/source
  echo "3.0 (git)" > debian/source/format
  echo "9" > debian/compat
  cat >debian/control <<EOF
Source: nuget-$pkgname
Section: devel
Priority: optional
Maintainer: `git config user.name` <`git config user.email`>
Homepage: $nuget_url
Standards-Version: 3.9.6

Package: $debname
Architecture: all
Depends: $nupkgdeps
Description: debianized $pkg nuget package
$nuget_description

Package: libmono-$pkgname
Architecture: all
Depends: $libmonodeps
Description: debianized $pkg nuget DLL
$nuget_description
EOF
  cat >debian/changelog <<EOF
nuget-$pkgname ($nuget_version) unstable; urgency=medium

  * debianized by nubian

 -- `git config user.name` <`git config user.email`>  `date -R`
EOF

  cat >debian/rules <<EOF
#!/usr/bin/make -f
%:
	dh \$@
EOF
  chmod +x debian/rules

  cat >debian/$debname.install <<EOF
#! /usr/bin/dh-exec
usr
EOF

  cat >debian/libmono-$pkgname.install <<EOF
#! /usr/bin/dh-exec
opt
EOF

}

create_git()
{
  echo "* Building git repository ..."
  git init .
  git add .
  git commit -m "debianize" >/dev/null
  pwd
  set -x
  git bundle create $OUTDIR/${debname}_$nuget_version.git master
  echo Git repository ${debname}_$nuget_version.git is ready
}

create_deb()
{
  echo "* Building debian package ..."

  debuild -uc -us -b

  cp ../*.deb $OUTDIR/
  echo Packages ${debname}_${nuget_version}_all.deb and libmono-${pkgname}_${nuget_version}_all.deb are ready
  cd $OUTDIR
}

OUTDIR=`pwd`
echo "* Working dir: $dir"
dir=`mktemp -d`
cd $dir

action=`echo $action | tr - _`
case $action in
  deb)
    setup_nuget $@
    create_deb
    ;;
  git)
    setup_nuget $@
    create_git
    ;;
  bulkconvert)
    nubian_$action $@
    ;;
  *)
    echo "Unknown action: $action"
    usage
    ;;
esac

rm -rf $dir

